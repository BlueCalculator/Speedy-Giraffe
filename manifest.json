{
  "manifest_version": 3,
  "name": "Form Data Extension",
  "version": "1.0",
  "description": "Pass form data from popup to content script using chrome.storage.local",
  "permissions": ["activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["injection.css"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": { 
          "16": "./imgs/16topGG.png",
          "32": "./imgs/32topGG.png",
          "48": "./imgs/48topGG.png",
          "128": "./imgs/128topGG.png" 
        }
}